{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",
	"landingPage": "/wp-admin/site-editor.php",
	"preferredVersions": {
		"php": "8.0",
		"wp": "latest"
	},
	"login": true,
	"steps": [
		{
			"step": "login"
		},
		{
			"step": "setSiteOptions",
			"options": {
				"blogname": "Arts & Crafts"
			}
		},
		{
			"step": "installTheme",
			"themeData": {
				"resource": "wordpress.org/themes",
				"slug": "twentytwentyfive"
			}
		},
		{
			"step": "installTheme",
			"themeData": {
				"resource": "url",
				"url": "https://github-proxy.com/proxy/?repo=retrorism/arts-crafts"
			}
		},
		{
			"step": "mv",
			"fromPath": "/wordpress/wp-content/themes/arts-crafts-main",
			"toPath": "/wordpress/wp-content/themes/arts-crafts"
		},
		{
			"step": "activateTheme",
			"themeFolderName": "arts-crafts"
		},
		{
			"step": "installPlugin",
			"pluginData": {
				"resource": "wordpress.org/plugins",
				"slug": "create-block-theme"
			},
			"options": {
				"activate": true
			}
		},
		{
			"step": "installPlugin",
			"pluginData": {
				"resource": "wordpress.org/plugins",
				"slug": "twentig"
			},
			"options": {
				"activate": true
			}
		},
		{
			"step": "runPHP",
			"code": "<?php require_once 'wordpress/wp-load.php'; TwentigDashboard::get_instance();"
		},
		{
			"step": "wp-cli",
			"command": "wp option patch update twentig-options portfolio true --format=json"
		}
	]
}